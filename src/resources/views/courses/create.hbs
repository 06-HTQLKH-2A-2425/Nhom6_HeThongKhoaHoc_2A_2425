<div class='mt-4 container'>
    <h3>Đăng khóa học</h3>

    <form method='post' action='/courses/store'>
        <div class='mb-3'>
            <label for='description' class='form-label'>Mô tả</label>
            <input name='description' type='text' class='form-control' />
        </div>

        <div class='mb-3'>
            <label for='name' class='form-label'>Tên khóa học</label>
            <input name='name' type='text' class='form-control' />
        </div>
        <div class='mb-3'>
            <label for='videoId' class='form-label'>Video ID</label>
            <input name='videoId' type='text' class='form-control' />
        </div>
        <div class='mb-3'>
            <label for='level' class='form-label'>Trình độ yêu cầu</label>
            <input name='level' type='text' class='form-control' />
        </div>

        <button type='submit' class='btn btn-primary'>Thêm khóa học</button>
    </form>
</div>