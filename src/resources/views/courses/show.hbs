    <div class='row'>
        <div class='col-lg-2 mt-2 '>
            <button type="button" class="btn btn-outline-primary btn-sm">Há»ŒC NGAY</button>
            <ul class="list-unstyled mt-2">
                <li>{{course.level}}</li>
                <li>{{course.totalTime}}</li>
            </ul>
        </div>

        <div class='col-lg-10'>
            <div class="col-9">
                <h2>{{course.name}}</h2>
